{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Loan Service API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "PORT": "8080"
            },
            "args": []
        },
        {
            "name": "Run Unit Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-v"
            ]
        },
        {
            "name": "Run Package Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-v"
            ]
        }
    ]
}